{
	"name": "@thiagoporto/minim-ui",
	"version": "0.1.1-alpha",
	"description": "A component library made for the Chat Random web app. It follows a custom design system made by the creator.",
	"keywords": [
		"design system",
		"component library",
		"chat random",
		"react",
		"styled-components",
		"component lib",
		"themes",
		"components",
		"minim ui"
	],
	"homepage": "https://github.com/thiago-porto25/minim-ui",
	"bugs": "https://github.com/thiago-porto25/minim-ui/issues",
	"main": "dist/index.js",
	"author": "Thiago Porto <thiago_porto25@hotmail.com> (http://thiagoporto.tech)",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "rollup -c",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"lint": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "jest --coverage --verbose",
		"commit": "yarn git-cz",
		"prepare": "husky install",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@babel/preset-env": "^7.18.6",
